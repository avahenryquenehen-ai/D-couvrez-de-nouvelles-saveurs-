<style>
    body {
        margin: 0;
        font-family: 'Montserrat', sans-serif;
    }
    .page {
        display: none;
        height: 100vh;
        width: 100vw;
        background-color: #A8D5BA; /* vert pastel */
        color: white;
        text-align: center;
        padding: 50px;
        box-sizing: border-box;
    }
    .active {
        display: block;
    }
    h1 {
        font-weight: 700;
        font-size: 2.5em;
        margin-bottom: 40px;
    }
    .blocks {
        display: flex;
        justify-content: center;
        margin-top: 50px;
        gap: 20px;
        flex-wrap: wrap;
    }
    .block {
        width: 200px;
        height: 200px;
        background-color: rgba(255,255,255,0.2);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        border-radius: 15px;
        transition: transform 0.2s;
    }
    .block:hover {
        transform: scale(1.05);
    }
    .block img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        margin-bottom: 10px;
        border-radius: 10px;
    }
    .liquid-img {
        width: 300px;
        height: 300px;
        object-fit: cover;
        border-radius: 15px;
        margin-bottom: 15px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }
    .liquid-name {
        font-size: 20px;
        margin-bottom: 25px;
        font-weight: 600;
    }
    .buttons {
        display: flex;
        justify-content: center;
        gap: 25px;
        flex-wrap: wrap;
    }
    .buttons button {
        padding: 12px 25px;
        font-size: 16px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        transition: background 0.2s;
    }
    .like-btn {
        background-color: #4CAF7C;
        color: white;
    }
    .like-btn:hover {
        background-color: #3B7A60;
    }
    .another-btn {
        background-color: #F39C12;
        color: white;
    }
    .another-btn:hover {
        background-color: #D48C0A;
    }
</style>
</head>
<body>

<!-- Page 1 -->
<div id="page1" class="page active">
    <h1>Découvrez vos saveurs</h1>
    <div class="blocks">
        <div class="block" onclick="showLiquids('fruites')">
            <img src="https://via.placeholder.com/100?text=Fruits" alt="Fruités">
            <span>Fruités</span>
        </div>
        <div class="block" onclick="showLiquids('gourmands')">
            <img src="https://via.placeholder.com/100?text=Gourmands" alt="Gourmands">
            <span>Gourmands</span>
        </div>
        <div class="block" onclick="showLiquids('tabacs')">
            <img src="https://via.placeholder.com/100?text=Tabacs" alt="Tabacs">
            <span>Tabacs</span>
        </div>
    </div>
</div>

<!-- Page 2 -->
<div id="page2" class="page">
    <h1 id="liquid-category"></h1>
    <img id="liquid-img" class="liquid-img" src="" alt="Liquide">
    <div class="liquid-name" id="liquid-name"></div>
    <div class="buttons">
        <button class="like-btn" onclick="goToThankYou()">J'aime</button>
        <button class="another-btn" onclick="showRandomLiquid()">Découvrir un autre</button>
    </div>
</div>

